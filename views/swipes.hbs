<!doctype html>

<html>

  <head>
    <title>Tindercardsjs demo</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no">

    <style>

      body{
        font-family: 'Helvetica-Neue', 'HelveticaNeue', arial, sans-serif;
        color: #434343;
      }

      .tc-card-name{
        font-weight:normal;
      }

      #main{
        position:relative;
        width:320px;
        height:480px;
        left:50%;
        margin-left:-160px;
      }
    </style>

  </head>

  <body>

    <div id="main"></div>

    <script src="js/jquery/jquery.min.js"></script>
    <script src="js/hammer/hammer.min.js"></script>
    <script src="js/tindercardsjs/tindercards.js"></script>

    <script>
      $(document).ready(function () {

        $.ajax({
          url: 'https://casmastic.firebaseio.com/1.json',
          dataType: 'json',
          success: function(response) {
            console.log(response)
            makeCard(response);
          }
        });

        // Define cards
        var cards = [
          new Tindercardsjs.card(2, 'Little House', 'On the prairie', ''),
          new Tindercardsjs.card(1, 'Agro Picard', 'Hates Klingons, likes beer.', 'gfx/pics/02.jpg'),
          new Tindercardsjs.card(0, 'Jean-Luc, Worf & William', 'Swipe right if you also like funny hats like us :D', 'gfx/pics/03.jpg')
        ];

        function makeCard(data) {
          console.log(data.Photos[0].Url);
          var newCard = new Tindercardsjs.card(cards.length, data.Title, data.Description, data.Photos[0].Url);
          cards.push(newCard);
          render();
        }

        function render() {
          // Render cards
          Tindercardsjs.render(cards, $('#main'), function (event) {
            console.log('Swiped ' + event.direction + ', cardid is ' + event.cardid + ' and target is:');
            console.log(event.card);
          });
        }
      });
    </script>

  </body>

</html>
